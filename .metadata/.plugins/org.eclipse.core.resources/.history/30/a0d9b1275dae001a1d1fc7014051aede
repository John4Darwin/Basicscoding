#include <stdio.h>
#include <stdlib.h>
void array();
void getarray();
void displayarray();
int main(void) {
array();
getarray();
displayarray();
	return EXIT_SUCCESS;
}
void array(){
	int L;
	setbuf(stdout,NULL);
	printf("Enter a limit");
	scanf("%d",&L);


void getarray(){
	int a[100],i,L;
	printf("Enter values of array");
	for(i=0;i<L;i++){
	scanf("%d",&a[i]);
	}
}
void displayarray(){
int	a[100],L,i;
printf("Values of array \n");
for(i=0;i<L;i++){
	printf("%d\t",a[i]);
}
}

}
