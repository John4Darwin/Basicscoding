#include <stdio.h>
#include <stdlib.h>

int main(void) {
	char name,Limit[100];
	setbuf(stdout,NULL);
printf("Enter Character limit");
scanf("%d",&Limit);
printf("Enter a Name");
scanf("%s",name);
printf("Entered Name is :%s",name);
	return EXIT_SUCCESS;
}
