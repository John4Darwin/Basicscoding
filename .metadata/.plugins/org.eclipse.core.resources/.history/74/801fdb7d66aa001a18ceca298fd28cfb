#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int d;
d=average();
	return EXIT_SUCCESS;
}

float average(){
	float a,b,c,result;
	printf("Enter 3 numbers");
	scanf("%f%f%f",&a,&b,&c);
	result=(a+b+c)/3;
	return result;
}
