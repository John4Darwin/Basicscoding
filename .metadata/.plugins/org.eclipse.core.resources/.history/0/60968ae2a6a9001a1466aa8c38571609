#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int L,i,V[100],a[100],temp;
	setbuf(stdout,NULL);
printf("Enter Array limit");
scanf("%d",&L);
printf("Enter values of array1");
for(i=0;i<L;i++){
	scanf("%d",&V[i]);
}
printf("Enter values of array2 ");
for(i=0;i<L;i++){
	scanf("%d",&a[i]);
}
for(i=0;i<L;i++){
	temp=V[i];
	V[i]=a[i];
	a[i]=temp;
}

printf("Array1\t");
for(p=0;p<L;p++){
		printf("%d\t",V[i]);
}
printf("Array 2\t");
	for(i=0;i<L;i++){
		printf("%d\t",a[i]);
	}


	return EXIT_SUCCESS;
}
