#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int Limit;
	char Name;
	setbuf(stdout,NULL);
printf("Enter Character Limit");
scanf("%d",&Limit);
printf("Enter a Name");
scanf("%s",Name);
printf("Entered Name is :%s",Name);
	return EXIT_SUCCESS;
}
