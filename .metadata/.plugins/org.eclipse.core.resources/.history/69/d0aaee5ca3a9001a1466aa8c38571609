#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int L,i,V[100],p;
	setbuf(stdout,NULL);
printf("Enter Array limit");
scanf("%d",&L);
printf("Enter values of array1");
for(i=0;i<L;i++){
	scanf("%d",&V[i]);
}
printf("Enter values of array2 ");
for(p=0;p<L;p++){
	scanf("%d",&V[p]);
}
	return EXIT_SUCCESS;
}
