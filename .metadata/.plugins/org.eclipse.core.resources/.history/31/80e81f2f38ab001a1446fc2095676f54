#include <stdio.h>
#include <stdlib.h>
void pattern(int);
int main(void) {
	int L,J;
	setbuf(stdout,NULL);
printf("enter a limit");
scanf("%d",&L);
pattern(J);
	return EXIT_SUCCESS;
}
void pattern(int L){
	int i,j;
	for(i=0;i<L;i++){
		for(j=0;j<i;j++){
			printf(" %d",j);
		}
		printf("\n");
	}
}
