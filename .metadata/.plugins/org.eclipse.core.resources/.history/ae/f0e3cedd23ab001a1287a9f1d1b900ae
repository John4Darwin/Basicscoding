#include <stdio.h>
#include <stdlib.h>
void even();
int main(void) {
	even();
	return EXIT_SUCCESS;
}
void even(){
	int L,i;
	setbuf(stdout,NULL);
	printf("Enter a limit");
	scanf("%d",&L);
	for(i=0;i<L;i++){
		if(i%2==0){
			printf("%d",i);
		}
	}
}
