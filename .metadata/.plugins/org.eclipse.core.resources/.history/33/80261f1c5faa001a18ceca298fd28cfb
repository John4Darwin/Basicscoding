#include <stdio.h>
#include <stdlib.h>
void average(int,int,int);
int main(void) {
	int a,b,c;
	setbuf(stdout,NULL);
printf("Enter 3 numbers");
	scanf("%f%f%f",&a,&b,&c);
average(a,b,c);
	return EXIT_SUCCESS;
}
void average(int n1,int n2, int n3){
	int average;
	average=(n1+n2+n3)/3;
	printf("Average is %f",average);
}
